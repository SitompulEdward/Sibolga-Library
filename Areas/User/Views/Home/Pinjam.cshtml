@model Peminjaman

@{ 
    Layout = "_LayoutUser";
} 
    
    
    <!--SECTION START-->
<section class="c-all p-semi p-event">
    <div class="semi-inn">
        <div class="semi-com semi-left">
            <div class="all-title quote-title qu-new semi-text eve-reg-text">
                <h2>Pinjam Buku</h2>
                <p>"Buku adalah mercusuar yang berdiri di tepi samudra waktu yang luas"</p>
                <div class="semi-deta eve-deta">
                    <ul>
                        <li></li>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
                <p class="help-line">Buku adalah Jendela Ilmu</p>
            </div>
        </div>
        <div class="semi-com semi-right">
            <div class="n-form-com semi-form">
                <div class="col s12">
                    <form asp-action="Pinjam" class="form-horizontal">
                        <div class="form-group">
                            <div class="col-md-12">
                                <input asp-for="User_Id" type="text" class="form-control" placeholder="User Id" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input asp-for="No_Telp" type="number" class="form-control" placeholder="No Telp" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input asp-for="Jatuh_Tempo" type="date" class="form-control" placeholder="Tanggal Kembali" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input asp-for="Buku_Id" type="text" class="form-control" placeholder="Id Buku">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input asp-for="Bayar" type="text" class="form-control" placeholder="Bayar">
                            </div>
                        </div>
                        <div class="form-group mar-bot-0">
                            <div class="col-md-12">
                                <i class="waves-effect waves-light light-btn waves-input-wrapper" style=""><input type="submit" value="APPLY NOW" class="waves-button-input"></i>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--SECTION END-->