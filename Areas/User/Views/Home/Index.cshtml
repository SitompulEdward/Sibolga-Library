<!-- POPULAR COURSES -->
<section class="pop-cour">
    <div class="container com-sp pad-bot-70">
        <div class="row">
            <div class="con-title">
                <h2>Popular <span>Buku</span></h2>
                <p>Fusce id sem at ligula laoreet hendrerit venenatis sed purus. Ut pellentesque maximus lacus, nec pharetra augue.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div>
                    @foreach (var item in Model.buku)
                    {
                        int cek = 0;
                        if (cek < 4)
                        {
                            <div class="home-top-cour">
                                <!--POPULAR COURSES IMAGE-->
                                <div class="col-md-3"> <img src="@item.Gambar" alt=""> </div>
                                <!--POPULAR COURSES: CONTENT-->
                                <div class="col-md-9 home-top-cour-desc">
                                    <a href="#">
                                        <h3>@item.Judul_Buku</h3>
                                    </a>
                                    <h4>@item.Pengarang / @item.Tahun_Terbit</h4>
                                    <h4>@item.Id / @item.Stock</h4>
                                    <p style="font-size:16px">@item.Sipnosis</p> <span class="home-top-cour-rat">4.2</span>
                                    <div class="col-sm-5 hom-list-share">
                                        <ul>
                                            <li><a asp-action="Pinjam"><i class="fa fa-bar-chart" aria-hidden="true"></i> Pinjam Buku</a> </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            cek += 1;
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>


