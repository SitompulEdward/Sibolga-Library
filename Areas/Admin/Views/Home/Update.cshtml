@model Admin

<!--== BODY INNER CONTAINER ==-->
<div class="sb2-2">
    <!--== breadcrumbs ==-->
    <div class="sb2-2-2">
        <ul>
            <li>
                <a asp-action="Index"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
            </li>
            <li class="active-bre">
                <a href="#"> Tambah Akun Baru Admin</a>
            </li>
            <li class="page-back">
                <a asp-action="Daftar"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
            </li>
        </ul>
    </div>

    <!--== User Details ==-->
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp admin-form">
                    <div class="inn-title">
                        <h4>Form Akun Baru</h4>
                        <p>Here you can edit your website basic details URL, Phone, Email, Address, User and password and more</p>
                    </div>
                    <div class="tab-inn">
                        <form asp-controller="Home" asp-action="Update" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Admin_Id" />
                            <div class="row">
                                <div class="input-field col s12">
                                    <input asp-for="Nama_Lengkap" type="text" class="validate" required>
                                    <label class="">Nama Lengkap</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input asp-for="No_Telp" type="number" class="validate" required>
                                    <label class="">Nomor Handphone</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input asp-for="Alamat" type="text" class="validate" required>
                                    <label class="">Alamat</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input asp-for="Email" type="text"  class="validate" required>
                                    <label class="">Email</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input asp-for="Password" type="text" class="validate" required>
                                    <label class="">Password</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="file-field input-field col s12">
                                    <div class="btn admin-upload-btn">
                                        <span>File</span>
                                        <input type="file" name="image" accept=".jpg, .png, .svg" multiple>
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" asp-for="Gambar" type="text" placeholder="Foto Profil">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <i class="waves-effect waves-light btn-large waves-input-wrapper" style="">
                                        <input type="submit" class="waves-button-input">
                                    </i>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>